<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Medal_case" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/rk_brand</item>
		<item name="colorPrimaryVariant">@color/rk_brand</item> <!-- ideally a darker version of the brand -->
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/rk_brand</item> <!-- should compliment the brand -->
		<item name="colorSecondaryVariant">@color/rk_brand</item> <!-- darker version of secondary -->
		<item name="colorOnSecondary">@color/rk_black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.Medal_case.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.Medal_case.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.Medal_case.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>