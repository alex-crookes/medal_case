<?xml version="1.0" encoding="utf-8"?>
<navigation android:id="@+id/nav_graph"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	app:startDestination="@id/Achievements">

	<fragment
		android:id="@+id/Achievements"
		android:name="com.alexcrookes.medal_case.AchievementsFragment"
		android:label="@string/feature_achievements"
		tools:layout="@layout/fragment_first">

		<action
			android:id="@+id/action_FirstFragment_to_SecondFragment"
			app:destination="@id/SecondFragment" />
	</fragment>
	<fragment
		android:id="@+id/SecondFragment"
		android:name="com.alexcrookes.medal_case.SecondFragment"
		android:label="@string/second_fragment_label"
		tools:layout="@layout/fragment_second">

		<action
			android:id="@+id/action_SecondFragment_to_FirstFragment"
			app:destination="@id/Achievements" />
	</fragment>
</navigation>